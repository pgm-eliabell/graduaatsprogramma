{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-3xl mb-6 text-center text-white">Register</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}

    <div>
        {{ form_label(registrationForm.username, 'Username', {'label_attr': {'class': 'block font-semibold mb-1 text-gray-200'}}) }}
        {{ form_widget(registrationForm.username, {'attr': {'class': 'w-full p-2 rounded border border-gray-600 bg-gray-800 text-white'}}) }}
        {{ form_errors(registrationForm.username) }}
    </div>

    <div>
        {{ form_label(registrationForm.firstName, 'First Name', {'label_attr': {'class': 'block font-semibold mb-1 text-gray-200'}}) }}
        {{ form_widget(registrationForm.firstName, {'attr': {'class': 'w-full p-2 rounded border border-gray-600 bg-gray-800 text-white'}}) }}
        {{ form_errors(registrationForm.firstName) }}
    </div>

    <div>
        {{ form_label(registrationForm.lastName, 'Last Name', {'label_attr': {'class': 'block font-semibold mb-1 text-gray-200'}}) }}
        {{ form_widget(registrationForm.lastName, {'attr': {'class': 'w-full p-2 rounded border border-gray-600 bg-gray-800 text-white'}}) }}
        {{ form_errors(registrationForm.lastName) }}
    </div>

    <div>
        {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block font-semibold mb-1 text-gray-200'}}) }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full p-2 rounded border border-gray-600 bg-gray-800 text-white'}}) }}
        {{ form_errors(registrationForm.email) }}
    </div>

    <div>
        {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block font-semibold mb-1 text-gray-200'}}) }}
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full p-2 rounded border border-gray-600 bg-gray-800 text-white'}}) }}
        {{ form_errors(registrationForm.plainPassword) }}
    </div>

    <button type="submit" class="mt-4 px-4 py-2 bg-indigo-600 text-white rounded shadow">
        Register
    </button>

    {{ form_end(registrationForm) }}
{% endblock %}