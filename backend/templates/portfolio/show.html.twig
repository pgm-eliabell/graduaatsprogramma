{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Portfolio #{{ portfolio.id }}</h1>

  <h2 class="text-xl mb-2">Portfolio Components</h2>

  {% if portfolio.getPortfolioComponents() is not empty %}
    <ul class="space-y-4">
      {% for component in portfolio.getPortfolioComponents() %}
        <li class="p-4 border rounded bg-gray-100 text-gray-900">
          <p class="font-semibold">Type: {{ component.getComponentType() }}</p>
          <pre class="mt-2 whitespace-pre-wrap">{{ component.getContent()|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>No components found.</p>
  {% endif %}
</div>
{% endblock %}
