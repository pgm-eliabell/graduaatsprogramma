{% extends 'base.html.twig' %}

{% block body %}
<div class="home-container mx-auto max-w-screen-xl p-5 bg-gray-900 text-white">
    {# Hero Section #}
    <section class="hero text-center p-10 bg-gradient-to-br from-indigo-900 to-gray-900 rounded-xl shadow-lg transform transition-transform duration-300 hover:scale-105 mb-10">
        <h2 class="text-4xl mb-2 font-bold">Have you made your own profile?</h2>
        <p class="text-xl mb-6">Create and customize your portfolio, share your experiences, and engage with others.</p>
        <a href="{{ path('create_portfolio') }}" class="cta-button inline-block mt-5 px-6 py-3 bg-gradient-to-r from-purple-500 to-indigo-600 text-white rounded-full text-lg shadow-md transition-all duration-300 transform hover:translate-y-[-3px] hover:from-purple-600 hover:to-indigo-500">Start Building</a>
    </section>

    {# Featured Portfolios #}
    <div class="portfolio-grid p-5 mt-10 rounded-lg shadow-lg bg-gray-800">
        <h2 class="text-2xl mb-5 text-center">Featured Users</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            {% for user in paginatedUsers %}
                <div class="portfolio-card bg-gray-700 rounded-lg overflow-hidden shadow-lg transform transition-transform duration-300 hover:scale-105 hover:shadow-xl">
                    <img src="/uploads/profilePictures{{ user.profilePicture }}" alt="{{ user.username }}" class="w-full h-48 object-cover rounded-t-lg" />
                    <div class="p-4">
                        <p class="text-center text-lg font-semibold text-white">{{ user.username }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>

        {# Pagination Controls #}
        <div class="pagination flex justify-center items-center mt-5">
            <button class="px-4 py-2 bg-indigo-700 text-white rounded transition-colors duration-300 hover:bg-indigo-500 disabled:opacity-50"
                {{ currentPage == 1 ? 'disabled' : '' }}
                onclick="window.location='{{ path('app_home', { page: currentPage - 1 }) }}'">
                Previous
            </button>
            <span class="mx-2 text-white">Page {{ currentPage }} of {{ totalPages }}</span>
            <button class="px-4 py-2 bg-indigo-700 text-white rounded transition-colors duration-300 hover:bg-indigo-500 disabled:opacity-50"
                {{ currentPage == totalPages ? 'disabled' : '' }}
                onclick="window.location='{{ path('app_home', { page: currentPage + 1 }) }}'">
                Next
            </button>
        </div>
    </div>
</div>
{% endblock %}
