    </section>

    {# Featured Portfolios #}
    <div class="portfolio-grid bg-blue-800 p-5 mt-10 rounded-lg shadow-lg">
        <h2 class="text-2xl text-white mb-5 text-center">Uitgelichte Users</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            {% for user in paginatedUsers %}
                <div class="portfolio-card bg-white rounded-lg overflow-hidden shadow-lg transform transition-transform duration-300 hover:scale-105 hover:shadow-xl">
                    <img src="/uploads/profilePictures{{ user.profilePicture }}" alt="{{ user.username }}" class="w-full h-48 object-cover rounded-t-lg" />
                    <div class="p-4">
                        <p class="text-center text-lg font-semibold">{{ user.username }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>

        {# Pagination Controls #}
        <div class="pagination flex justify-center items-center mt-5">
            <button class="px-4 py-2 bg-blue-700 text-white rounded transition-colors duration-300 hover:bg-blue-500 disabled:opacity-50"
                {{ currentPage == 1 ? 'disabled' : '' }}
                onclick="window.location='{{ path('app_home', { page: currentPage - 1 }) }}'">
                Previous
            </button>
            <span class="mx-2 text-white">Page {{ currentPage }} of {{ totalPages }}</span>
            <button class="px-4 py-2 bg-blue-700 text-white rounded transition-colors duration-300 hover:bg-blue-500 disabled:opacity-50"
                {{ currentPage == totalPages ? 'disabled' : '' }}
                onclick="window.location='{{ path('app_home', { page: currentPage + 1 }) }}'">
                Next
            </button>
        </div>
    </div>

